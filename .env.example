# Google Sheets Configuration
GOOGLE_CREDS_PATH=./service-account.json
SHEET_ID=your_google_sheet_id
SHEET_RANGE=Leads!A:F
# Column order: id, name, email, status, source, trello_task_id

# Trello Configuration
TRELLO_KEY=your_trello_api_key
TRELLO_TOKEN=your_trello_token
TRELLO_BOARD_ID=your_board_id
TRELLO_LIST_TODO_ID=trello_list_todo_id
TRELLO_LIST_IN_PROGRESS_ID=trello_list_in_progress_id
TRELLO_LIST_DONE_ID=trello_list_done_id
TRELLO_LIST_LOST_ID=trello_list_lost_id
# Status values: NEW, CONTACTED, QUALIFIED, LOST

# Logging Configuration
LOG_LEVEL=INFO
